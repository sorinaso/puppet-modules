#
#!/bin/sh -e
#
# Startup script for Red5

export RED5_HOME=<%= @home %>

start_red5="$RED5_HOME/red5.sh start"
stop_red5="$RED5_HOME/red5-shutdown.sh stop"

start() {
        echo -n "Starting Red5: "
        ${start_red5}
        echo "done."
}
stop() {
        echo -n "Shutting down Red5: "
        ${stop_red5}
        echo "done."
}

case "$1" in
  start)
        start
        ;;
  stop)
        stop
        ;;
  restart)
        stop
        sleep 10
        start
        ;;
  *)
        echo "Usage: $0 {start|stop|restart}"
esac

exit 0
